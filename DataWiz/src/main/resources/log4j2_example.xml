<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Configuration>
<Configuration monitorInterval="30" status="INFO">
    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%d %highlight{[%5.5p]}{STYLE=Logback} %40.40c{2} : %m%n" disableAnsi="false"/>
        </Console>
        <File name="File" fileName="/var/log/tomcat8/DataWiz.log">
            <PatternLayout pattern="%d{dd MMM yyyy HH:mm:ss,SSS} [%t] %-5level: %logger{36} --- %msg%n"/>
        </File>
        <SMTP name="Mail" subject="DataWiz Error Log" to="rb@leibniz-psychology.org"
              from="datawiz@leibniz-psychology.org"
              smtpPassword="4BiBedi_BaBedi_Bou" smtpUsername="datawiz@zpid.de" smtpHost="mail.zpid.de" smtpPort="25"
              bufferSize="64" smtpProtocol="smtp">
        </SMTP>
        <Async name="Async" bufferSize="512">
            <AppenderRef ref="CONSOLE" level="info"/>
            <AppenderRef ref="File" level="info"/>
            <AppenderRef ref="Mail" level="info"/>
            <LinkedTransferQueue/>
        </Async>
    </Appenders>
    <Loggers>
        <logger name="org.springframework" level="INFO"/>
        <logger name="org.hibernate" level="INFO"/>
        <logger name="de.zpid" level="INFO"/>
        <logger name="de.zpid.spss" level="INFO"/>
        <Root level="INFO">
            <AppenderRef ref="Async"/>
        </Root>
    </Loggers>
</Configuration>